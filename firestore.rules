rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- 1. Configuration (Fixed Permission Error) ---
    match /config/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    // --- 2. Users ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
    // --- 3. Feedback ---
    match /feedback/{docId} {
      allow create: if request.auth != null;
    }
    // --- 4. Rooms (Vyuha & Kram) ---
    match /rooms/{roomId} {
      
      // Helper: Check if user is owner or collaborator
      function canAccessRoom() {
        let roomData = resource.data;
        return request.auth != null && (
          roomData.owner == request.auth.uid || 
          (roomData.collaborators != null && roomData.collaborators.hasAny([request.auth.uid]))
        );
      }
      
      // Helper: For subcollections, fetch parent room data
      function canAccessParentRoom() {
        let roomData = get(/databases/$(database)/documents/rooms/$(roomId)).data;
        return request.auth != null && (
          roomData.owner == request.auth.uid || 
          (roomData.collaborators != null && roomData.collaborators.hasAny([request.auth.uid]))
        );
      }
      
      // Helper: Check if user is trying to join (add themselves to collaborators)
      function isJoiningRoom() {
        let currentCollabs = resource.data.collaborators;
        let newCollabs = request.resource.data.collaborators;
        let uid = request.auth.uid;
        
        // User is not currently a collaborator
        // AND new collaborators list contains user
        // AND only change is adding user to collaborators
        return !currentCollabs.hasAny([uid]) &&
               newCollabs.hasAny([uid]) &&
               newCollabs.size() == currentCollabs.size() + 1 &&
               request.resource.data.diff(resource.data).affectedKeys().hasOnly(['collaborators']);
      }
      // Room Rules
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;
      
      // Update: Owner, existing Collaborator, OR user joining (not banned)
      allow update: if request.auth != null && (
        // Owner can do anything
        resource.data.owner == request.auth.uid ||
        // Existing collaborator (not banned) can update
        (resource.data.collaborators.hasAny([request.auth.uid]) && 
         !(resource.data.bannedUsers != null && resource.data.bannedUsers.hasAny([request.auth.uid]))) ||
        // User joining the room (not banned)
        (isJoiningRoom() && 
         !(resource.data.bannedUsers != null && resource.data.bannedUsers.hasAny([request.auth.uid])))
      );
      // --- Subcollections ---
      match /nodes/{nodeId} { allow read, write: if canAccessParentRoom(); }
      match /elements/{elementId} { allow read, write: if canAccessParentRoom(); }
      match /edges/{edgeId} { allow read, write: if canAccessParentRoom(); }
      match /notes/{noteId} { allow read, write: if canAccessParentRoom(); }
      match /presence/{userId} { allow read, write: if canAccessParentRoom(); }
      match /comments/{commentId} { allow read, write: if canAccessParentRoom(); }
    }
  }
}
